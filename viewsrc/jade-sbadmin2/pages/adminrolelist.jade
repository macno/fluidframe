extends ../layouts/layout.jade

block content
    #page-wrapper
      .row
        .col-lg-12
          table#example.display.table(cellspacing="0" width="100%")
            thead
              tr
                th id
                th name
                th description
                th status
                th created
                th modified

block pageJavascript
    script.
        $(document).ready(function(){
            $("#example").DataTable({
                ajax:'/admin/api/roles',
                processing: true,
                serverSide: true,
                columns: [
                    { "data": "id" },
                    { "data": "name" },
                    { "data": "description" },
                    { "data": "status" },
                    { "data": "created" },
                    { "data": "modified" }
                ]
            });
        });
