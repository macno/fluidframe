extends ../layouts/base.jade

block content
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Please Sign In
            .panel-body
              if this.loginform-url
                .alert.alert-danger= this.loginform-url
                
              form(role='form' method='post' action=this.loginform-url)
                fieldset
                  .form-group
                    input.form-control(placeholder='E-mail', name='email', type='email', autofocus='')
                  .form-group
                    input.form-control(placeholder='Password', name='password', type='password', value='')
                  .checkbox
                    label
                      input(name='rememberme', type='checkbox', value='Remember Me')
                      | Remember Me
                  // Change this to a button or input when using this as a form
                  input.btn.btn-lg.btn-success.btn-block(type='submit' value='Login') 
